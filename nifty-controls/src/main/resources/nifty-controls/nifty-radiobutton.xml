<?xml version="1.0" encoding="UTF-8"?>
<nifty-controls>
  <!-- the actual radio button -->
  <controlDefinition name="radioButton" style="nifty-radiobutton-style" controller="de.lessvoid.nifty.controls.radiobutton.RadioButtonControl">
    <panel style="#panel">
      <image id="#select" style="#select">
        <interact onClick="onClick()" />
      </image>
    </panel>
  </controlDefinition>

  <!-- the radio group helper is used to group radiobuttons in a logical way so that from all radiobuttons only a single one can be active at any given moment -->
  <controlDefinition name="radioButtonGroup" width="0px" height="0px" visible="false" controller="de.lessvoid.nifty.controls.radiobutton.RadioButtonGroupControl" />
</nifty-controls>
