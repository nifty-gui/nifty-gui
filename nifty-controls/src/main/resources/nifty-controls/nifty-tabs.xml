<?xml version="1.0" encoding="UTF-8"?>
<nifty-controls>
  <controlDefinition controller="de.lessvoid.nifty.controls.tabs.TabGroupControl" name="tabGroup"
                     childRootId="#tab-content-panel" style="nifty-tabs">
    <panel id="#tabs-panel" childLayout="vertical">
      <panel id="#tab-button-panel" style="#tab-button-panel" childLayout="horizontal">
        <control id="#button-template" name="button" style="nifty-tab-button-active"/>
      </panel>
      <panel id="#tab-content-panel" style="#panel" childLayout="center"/>
    </panel>
  </controlDefinition>

  <controlDefinition controller="de.lessvoid.nifty.controls.tabs.TabControl" name="tab" style="nifty-tab"
                     childLayout="center" childRootId="#content">
    <panel id="#content"/>
  </controlDefinition>
</nifty-controls>
