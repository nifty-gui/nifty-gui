<?xml version="1.0" encoding="UTF-8"?>
<nifty-controls xmlns="http://nifty-gui.lessvoid.com/nifty-gui">
    <controlDefinition style="nifty-textfield" name="textarea"
                       controller="de.lessvoid.nifty.controls.textarea.TextAreaControl"
                       inputMapping="de.lessvoid.nifty.controls.textfield.TextFieldInputMapping"
                       passwordChar="$passwordChar" maxLength="$maxLength">
        <panel style="#panel" focusable="true" width="100%" height="100%" >
            <interact onClick="onClick()" onClickMouseMove="onClickMouseMove()"/>
            <panel id="#field" style="#field">
                <text id="#text" style="#text" text="$text" wrap="true" width="100%" height="100%" valign="top" textVAlign="top"/>
            </panel>
            <panel style="#cursor-panel">
                <image id="#cursor" style="#cursor"/>
            </panel>
        </panel>
    </controlDefinition>
</nifty-controls>
