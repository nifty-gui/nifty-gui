<?xml version="1.0" encoding="UTF-8"?>
<nifty-controls>
  <!-- DROP DOWN CONTROL -->
  <controlDefinition style="nifty-drop-down" name="dropDownControl" controller="de.lessvoid.nifty.controls.dropdown.controller.DropDownControl" inputMapping="de.lessvoid.nifty.controls.dropdown.inputmapping.DropDownControlInputMapping">
    <panel childLayout="horizontal" height="28px" focusable="true">
      <interact onClick="dropDownClicked()" />
      <text id="text" style="#text" text="" />
      <image id="icon" style="#icon" />
    </panel>
  </controlDefinition>

  <!-- DROP DOWN CONTROL ITEM -->
  <controlDefinition name="dropDownControlItem" controller="de.lessvoid.nifty.controls.dropdown.controller.DropDownControlItem" inputMapping="de.lessvoid.nifty.controls.dropdown.inputmapping.DropDownItemInputMapping">
    <text id="text" style="#text-item" text="" focusable="true">
      <interact onRelease="dropDownItemClicked()"/>
    </text>
  </controlDefinition>

  <!-- DROP DOWN BOX POPUP (The Actual List this is) -->
  <popup id="dropDownBoxSelectPopup" style="nifty-drop-down" childLayout="absolute" controller="de.lessvoid.nifty.controls.dropdown.controller.DropDownPopup">
    <interact onRelease="close()" />
    <panel id="dropDownList" style="#list-panel" />
  </popup>
</nifty-controls>
