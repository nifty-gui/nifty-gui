<?xml version="1.0" encoding="UTF-8"?>
<nifty-styles>
  <!-- the background of the textfield -->
  <style id="nifty-textfield#panel">
    <attributes childLayout="overlay" height="28px" />
  </style>

  <!-- the actual input field -->
  <style id="nifty-textfield#field">
    <attributes childLayout="center" visibleToMouse="true" childClip="true" />
    <effect>
      <onClick name="focus" />
      <onFocus name="imageOverlay" post="false" filename="textfield/field-selected.png" imageMode="resize:1,30,1,1,1,30,1,30,1,30,1,1" />
      <onActive name="imageOverlay" post="false" filename="textfield/field.png" imageMode="resize:1,30,1,1,1,30,1,30,1,30,1,1" />
      <onHover name="imageOverlay" filename="textfield/field-hover.png" imageMode="resize:6,30,6,6,6,30,6,30,6,30,6,6" post="true" inset="-5px" />
    </effect>
  </style>

  <!-- the text in the input field -->
  <style id="nifty-textfield#text" base="base-font">
    <attributes color="#000f" visibleToMouse="false" align="left" valign="center" textHAlign="left" />
    <effect>
      <onFocus name="textColor" post="false" color="#ffff" />
    </effect>
  </style>

  <!-- the cursor is rendered in a separate layer on top of the input field and this is the parent panel of this -->
  <style id="nifty-textfield#cursor-panel">
    <attributes childLayout="absolute" />
  </style>

  <!-- the actual cursor -->
  <style id="nifty-textfield#cursor">
    <attributes filename="textfield/cursor-empty.png" />
    <effect>
      <onActive name="imageOverlayPulsate" period="250" timeType="infinite" pulsateType="rectangle" filename="textfield/cursor.png" post="true"/>
    </effect>
  </style>
  </nifty-styles>
