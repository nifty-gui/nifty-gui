<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
  <useStyles filename="nifty-default-styles.xml"/>
  <useControls filename="nifty-default-controls.xml"/>

  <screen id="start">
    <layer childLayout="center">
      <panel width="25%" height="25%" align="center" valign="center" childLayout="vertical" backgroundColor="#55a5"
             padding="10">
        <control name="textfield"/>
        <control name="textfield" passwordChar="*"/>
        <control name="textfield" maxLength="10"/>
        <control name="textfield" filter="letters"/>
      </panel>
    </layer>
  </screen>
</nifty>